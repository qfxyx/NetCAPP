<resources>

    <style name="AppTheme" parent="android:Theme.Light" />
        <style name="main_tab_bottom">
        <item name="android:textSize">11.0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/home_btn_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">5.0dip</item>
    </style>

    <style name="myAlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:background">#F5FFFA</item>
        <item name="android:windowTitleStyle">@style/mytitleStyle</item>
    </style>

    <style name="mytitleStyle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>